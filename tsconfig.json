{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES2019",
    "jsx": "react",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "outDir": "build",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "dom",
      "webworker"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/tests/**/*"
  ]
}
